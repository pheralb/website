---
// Global styles:
import "../styles/globals.css";

// Components:
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";

// Page props:
interface Props {
  pageTitle: string;
  description: string;
}
const { pageTitle, description } = Astro.props;
---

<html lang="en">
  <head>
    <!-- General -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Pablo Hern치ndez" />
    <meta name="image" property="og:image" content="/images/og_image.png" />

    <!-- OG Image -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Pablo Hern치ndez" />
    <meta
      property="og:description"
      content={description || "Building amazing things"}
    />
    <meta property="og:image:width" content="1920" />
    <meta property="og:image:height" content="1080" />
    <meta property="og:url" content="https://www.pheralb.dev/" />
    <meta property="og:site_name" content="Pablo Hern치ndez - @pheralb" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Pablo Hern치ndez" />
    <meta
      name="twitter:description"
      content={description || "Building amazing things"}
    />
    <meta name="twitter:image" content="/images/og_image.png" />
    <meta name="twitter:image:alt" content="My personal website" />
    <meta name="twitter:creator" content="@pheralb_" />

    <!-- Favicon -->
    <link rel="icon" href="/images/pic.jpg" />

    <!-- Title -->
    <title>{pageTitle} - Pablo Hdez</title>
  </head>
  <body class="bg-midnight text-white">
    <Header />
    <slot />
    <Footer />
    <wc-toast></wc-toast>
  </body>
</html>
