---
import CustomContainer from "../components/container.astro";
import CopyUrl from "../components/copyUrl";
import Layout from "./index.astro";

const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title} description={frontmatter.description}>
  <div
    class="w-full border-b border-neutral-800 pb-3 text-neutral-300 transition-all duration-100 hover:text-white"
  >
    <CustomContainer>
      <div class="flex flex-row items-center justify-between">
        <div class="flex flex-row items-center">
          <a href="/blog" class="flex flex-row items-center text-xl font-bold"
            >Blog</a
          >
        </div>
        <div>
          <CopyUrl url={`pheralb.dev${frontmatter.url}`} client:load />
        </div>
      </div>
    </CustomContainer>
  </div>

  <div class="mx-auto max-w-4xl px-4 py-6 md:px-0 md:py-14">
    <div class="pb-8">
      <h1 class="mb-2 text-4xl font-bold">{frontmatter.title}</h1>
      <p class="text-xl text-gray-400">
        {frontmatter.description}
      </p>
    </div>
    <article
      class="prose prose-invert mt-8 max-w-none prose-h3:mb-0 prose-code:bg-transparent"
    >
      <slot />
    </article>
  </div>
</Layout>
